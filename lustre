#!/bin/bash

BIN=bin

function setup_external_tools {
  if [ ! -f "$BIN/test-runner" ]
  then
    mkdir -p "$BIN"
    cabal v2-install --installdir="$BIN" test-lib
  fi
}

function show_usage {
cat <<EOM
Usage: $0 COMMAND COMANND_OPTIONS
Available commands:
  build     Build project
  haddock   Generate Haddock documentation
  test      Run some tests
EOM
}




if [ "$#" == "0" ]
then
  show_usage
  exit 1
fi

COMMAND=$1
shift

case $COMMAND in
  build)
    echo Building project
    cabal v2-build exe:lustre;;

  haddock)
    echo Building Haddock documentation
    cabal v2-haddock;;

  run)
    cabal v2-run exe:lustre -- $*;;


  test)
    echo Running tests
    setup_external_tools
    if [ "$#" == "0" ]
      then TESTS=tests
      else TESTS=$*
    fi
    $BIN/test-runner --ext=.lus \
                     --exe=./run-one-test \
                     $TESTS
    ;;

  help)
    show_usage
    exit 0;;

  *)
    echo Unrecognized command: $COMMAND
    show_usage
    exit 1;;

esac



